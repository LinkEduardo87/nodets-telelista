{{>partials/header}}

{{#banner}}
<section class="banner" style="background-image: url('images/{{ background }}')"></section>
<h2>{{ title }}.</h2>
{{/banner}}

<div class="container list">
    {{#list}}
        
        <div class="item">
            <img src="images/{{ image }}" class="item--image" />
            <div class="item--name">{{ name }}</div>
            <div class="item--operation">Horário: {{ horario }} </div>
            <div class="item--hour">Telefone: {{ telefone }} </div>
        </div>

    {{/list}}

    
</div>

{{^list}}

<div class="container no-list">
    <h2>Ainda não temos o que está procurando.</h2>
</div>

{{/list}}

{{>partials/footer}}